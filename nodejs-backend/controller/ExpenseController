const expenseService = require('../service/expenseService')

exports.createExpense = async (req, res) => {
  try {
    const result = await expenseService.addExpense(req.body);
    res.status(201).json(result);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
};

exports.fetchExpenses = async (req, res) => {
  try {
    const expenses = await expenseService.getExpenses();
    res.status(200).json(expenses);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
};

exports.fetchMistralAPIResponse = async (req, res) => {
  try {    
    console.log('Input to Mistral API Controller:', req.body); 
    const response = await expenseService.getMistralAPIResponse(req.body.text);
    return res.status(201).json({ response });
  } catch (error) {
    console.error("Error getting Mistral API data:", error);
    res.status(500).json({ error: error.message });
  }finally{
    console.log('Input to Mistral API Controller in finally:', req.body.text); 
  }
};

